{
    "manifest_version": 2,
    "name": "Scotts extension",
    "version": "0.8",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"],
    "browser_action": {
        "default_icon": "troll.png",
        "default_title": "A popup hizzle"
    }
}